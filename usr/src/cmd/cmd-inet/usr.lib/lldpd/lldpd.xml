<service_bundle type='manifest' name='lldpd'>

<service
	name='network/lldpd'
	type='service'
	version='0.1'>

	<create_default_instance enabled='false' />

	<single_instance />

	<!-- We currently send (if configured) the hosts management addresses as
	     IP addresses, so we need the IP interfaces configured before we
	     start
	-->

	<dependency
		name='ipmgmt'
		grouping='require_all'
		restart_on='none'
		type='service'>
		<service_fmri value='svc:/network/ip-interface-mgmt' />
	</dependency>

	<exec_method
		type='method'
		name='refresh'
		exec=':kill -HUP'
		timeout_seconds='60'>
	</exec_method>

	<exec_method
		type='method'
		name='start'
		exec='/usr/lib/lldpd'
		timeout_seconds='60'>
	</exec_method>

	<exec_method
		type='method'
		name='stop'
		exec=':kill'
		timeout_seconds='60'>
	</exec_method>

	<property_group name='general' type='framework'>
		<propval name='action_authorization' type='astring'
		  value='illumos.smf.manage.lldp' />
		<propval name='value_authorization' type='astring'
		  value='illumos.smf.manage.lldp' />
	</property_group>

	<property_group name='daemon' type='application'>
		<propval name='log_level' type='count' value='30'
		  override='true'/>
		<propval name='value_authorization' type='astring'
		  value='illumos.smf.manage.lldp' />
	</property_group>

	<property_group name='config' type='application'>
		<propval name='value_authorization' type='astring'
		  value='illumos.smf.manage.lldp' />
	</property_group>

	<property_group name='lldp' type='application'>
		<propval name='tx_interval' type='count' value='30'
		  override='true'/>
		<propval name='tx_delay' type='count' value='2'
		  override='true'/>
		<propval name='tx_hold_multiplier' type='count' value='4'
		  override='true'/>
		<propval name='reinit_delay' type='count' value='2'
		  override='true'/>
		<propval name='notify_interval' type='count' value='5'
		  override='true'/>
		<propval name='tx_credit_max' type='count' value='5'
		  override='true'/>
	</property_group>

	<stability value='Unstable' />

	<template>
		<common_name>
			<loctext xml:lang='C'>
				Link layer discovery protocol service
			</loctext>
		</common_name>
		<pg_pattern name='daemon' type='application' target='this'
		   required='false'>
			<common_name>
				<loctext xml:lang='C'>
					lldp daemon startup options
				</loctext>
			</common_name>
			<prop_pattern name='log_level' type='count'
			    required='false'>
				<common_name>
					<loctext xml:lang='C'>
						The log level
					</loctext>
				</common_name>
				<description>
					<loctext xml:lang='C'>
						The minimum log level of events that are logged.
					</loctext>
				</description>
				<cardinality min='1' max='1' />
			</prop_pattern>
		</pg_pattern>
	</template>
</service>
</service_bundle>
